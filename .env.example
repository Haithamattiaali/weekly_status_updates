# PROCEED Dashboard - Environment Variables
# Copy this file to .env.local for local development
# Set these in Netlify dashboard for production

# Database Configuration (Turso/LibSQL)
# Get these from: https://turso.tech
DATABASE_URL=libsql://your-database.turso.io
DATABASE_AUTH_TOKEN=your-auth-token

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Feature Flags
ENABLE_CACHE=true
CACHE_TTL=300
INSERT_SAMPLE_DATA=false

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# CORS Configuration
CORS_ORIGIN=*

# File Upload Limits
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100